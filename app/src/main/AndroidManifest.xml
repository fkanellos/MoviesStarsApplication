<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviestarsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieStarsApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".ResetPasswordActivity"></activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".movie_details.MovieDetailsActivity" />
        <activity android:name=".search.SearchResult" />
        <activity
            android:name=".home.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor" />
        <activity android:name=".profile.UserProfileActivity" />
        <activity
            android:name=".register.RegisterActivity"
            android:theme="@style/Theme.loginTheme" />
        <activity
            android:name=".create_account.CreateAccountActivity"
            android:theme="@style/Theme.loginTheme" />
        <activity
            android:name=".splash.MainActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>